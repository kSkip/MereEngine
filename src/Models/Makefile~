include ../../make.inc

all: MD5CommonUtilities.o MD5MeshUtilities.o MD5AnimUtilities.o MD5GLBufferUtilities.o Armature.o tinyobjloader/tiny_obj_loader.o OBJGLBufferUtilities.o

