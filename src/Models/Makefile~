	$(C) $(CFLAGS) -I$(INCLUDES) MD5CommonUtilities.c

MD5MeshUtilities.o: $(INCLUDES)/Models/MD5MeshUtilities.h MD5MeshUtilities.c
	$(C) $(CFLAGS) -I$(INCLUDES) MD5MeshUtilities.c

MD5AnimUtilities.o: $(INCLUDES)/Models/MD5AnimUtilities.h MD5AnimUtilities.c
	$(C) $(CFLAGS) -I$(INCLUDES) MD5AnimUtilities.c

MD5GLBufferUtilities.o: $(INCLUDES)/Models/MD5GLBufferUtilities.hpp MD5GLBufferUtilities.cpp
	$(CC) $(CFLAGS) -I$(INCLUDES) MD5GLBufferUtilities.cpp

Armature.o: $(INCLUDES)/Models/Armature.hpp Armature.cpp
	$(CC) $(CFLAGS) -I$(INCLUDES) Armature.cpp

tinyobjloader/tiny_obj_loader.o: $(INCLUDES)/Models/tinyobjloader/tiny_obj_loader.h tinyobjloader/tiny_obj_loader.cc
	$(CC) $(CFLAGS) -I$(INCLUDES)/Models/tinyobjloader tinyobjloader/tiny_obj_loader.cc

OBJGLBufferUtilities.o: $(INCLUDES)/Models/OBJGLBufferUtilities.hpp OBJGLBufferUtilities.cpp
	$(CC) $(CFLAGS) -I$(INCLUDES) OBJGLBufferUtilities.cpp

clean:
	rm *.o
